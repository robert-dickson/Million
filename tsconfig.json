{
  "extends": "@vercel/style-guide/typescript",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "packages",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "noImplicitAny": false
  },
  "include": ["./packages/**/*.ts", "./packages/**/*.tsx"],
  "exclude": ["node_modules", "dist", "*.d.ts"]
}

{
  "extends": "@vercel/style-guide/typescript",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "packages/*": ["packages/*"],
      "million/*": ["packages/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "packages",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "noImplicitAny": false
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "dist", "benchmarks"]
}

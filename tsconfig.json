{
  "extends": "@vercel/style-guide/typescript",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "million/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "src",
    "lib": ["dom", "esnext"],
    "declarationDir": "dist",
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext"
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}

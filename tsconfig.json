{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "million": ["src/index"],
      "million/*": ["src/*"],
      "million/jsx-runtime": ["src/jsx"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "million",
    "lib": ["dom", "esnext"],
    "declarationDir": "dist",
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declaration": true,
    "strict": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "dist", "./src/**/*.js", "./src/**/*.test.ts"]
}
